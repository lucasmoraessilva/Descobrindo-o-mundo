<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlterarInformacoes">

    <LinearLayout
        android:id="@+id/ll_alterar_informacoes_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_alterar_informacoes_nome"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:hint="Nome: "
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_alterar_informacoes_nome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/editar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_alterar_informacoes_sobrenome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_alterar_informacoes_nome">

        <EditText
            android:id="@+id/et_alterar_informacoes_sobrenome"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:hint="Sobrenome: "
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_alterar_informacoes_sobrenome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/editar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_alterar_informacoes_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_alterar_informacoes_sobrenome">

        <EditText
            android:id="@+id/et_alterar_informacoes_nick"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:hint="Nick: "
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_alterar_informacoes_nick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/editar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_alterar_informacoes_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_alterar_informacoes_nick">

        <EditText
            android:id="@+id/et_alterar_informacoes_email"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:hint="Email: "
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_alterar_informacoes_email"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/editar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_alterar_informacoes_dt_nascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_alterar_informacoes_email">

        <EditText
            android:id="@+id/et_alterar_informacoes_dt_nascimento"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:hint="Data de nascimento: "
            android:inputType="date" />

        <Button
            android:id="@+id/btn_alterar_informacoes_dt_nascimento"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/editar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_alterar_informacoes_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_alterar_informacoes_dt_nascimento">

        <EditText
            android:id="@+id/et_alterar_informacoes_senha"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:hint="Senha: ***********"
            android:inputType="textPassword"
            android:enabled="false"/>

        <Button
            android:id="@+id/btn_alterar_informacoes_senha"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/editar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_alterar_informacoes_navegacao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_alterar_informacoes_pesquisa"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/lupa" />

        <Button
            android:id="@+id/btn_alterar_informacoes_jogar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/controle" />

        <Button
            android:id="@+id/btn_alterar_informacoes_alteracoes"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/engrenagem" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_alterar_informacoes_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Salvar"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/ll_alterar_informacoes_navegacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>